
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div class="w3-container w3-display-middle">
    <h1 class="w3-animate-left">
        <a style=color:#785ff4>Add </a><a style=color:#1185f9>New </a><a style=color:#3ae2fc>Item</a>
    </h1>
    <p id="hi"></p>
    @using (Html.BeginForm("AddGroceryItemPost", "Home", FormMethod.Post))
    {
        <div class="container" style="text-align:center;">

            @Html.TextBox("sku", null, new { @placeholder = "Enter Item SKU", required = "required" })<br />

            @Html.TextBox("name", null, new { @placeholder = "Enter Item Name", required = "required" })<br />

            @Html.TextBox("purchaseprice", null, new { @placeholder = "Enter Purchase Price", required = "required" })<br />

            @Html.TextBox("sellingprice", null, new { @placeholder = "Enter Selling Price", required = "required" })<br />

            @Html.TextBox("quantity", null, new { @placeholder = "Enter Current Inventory", required = "required" })<br />

            <br />
        </div>
        <div style="text-align:center;">
            <input type="submit" style="float: none; background-color: #1185f9;color: white; padding: 10px 15px; margin: 8px 0; border: none; cursor: pointer; width: 200px;" value="Add Store" />
        </div>
    }
</div>

