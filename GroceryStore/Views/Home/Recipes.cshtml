
<link href="https://fonts.googleapis.com/css?family=Montserrat:400i,900" rel="stylesheet">

<div class="w3-container w3-display-middle" style="padding-top:150px;">
    <h1 class="w3-animate-left">
        <a style=color:#785ff4>Browse </a><a style=color:#1185f9>Our </a><a style=color:#3ae2fc>Recipes!</a>
        <br />
    </h1>
    <br /> <br />
    <div style="text-align:left; padding-left:300px;">
        @if (ViewBag.foundrecipes == true)
        {
            foreach (Tuple<int, string, int> recipe in ViewBag.recipelist)
            {
                <p>Recipe ID: @recipe.Item1</p><br />
                <div style="width:500px;display: inline-block;vertical-align:middle;">
                    <p>@recipe.Item2</p>
                </div>
                <div style="width:300px;display: inline-block;vertical-align:top;">
                    <p>Total Cook Time (minutes): @recipe.Item3</p>
                </div>
                <div style="width:250px;display: inline-block;vertical-align:top;">
                    @using (Html.BeginForm("addRecipeToCart", "Home", FormMethod.Post))
                    {
                        <input type="hidden" value="@recipe.Item1" name="recipeid" />
                        <input type="submit" style="float: none; background-color: #1185f9;color: white; vertical-align:top;padding: 10px 15px;border: none; cursor: pointer; width: 220px;" value="Add Recipe Items to Cart" />
                    }
                </div>
                <br />
                <br />
            }
        }
        else
        {
            <p>There are curretly no recipes in the system :( .</p>
        }
    </div>
    <br />
    <div style="text-align:center; font-family: 'Montserrat', sans-serif;">
        @if (@GroceryStore.Models.Globals.getUserType(@GroceryStore.Models.Globals.getUser()) == "manager")
        {
            <a style="float: none;background-color: #785ff4;color: white;padding: 10px 15px;margin: 8px 0;border: none;cursor: pointer;width: 280px;height: 40px;" href="/Home/AddRecipe">Add New Recipe</a>
            <br />
        }
    </div>
</div>
